      <progress if="{{loading}}" class="{{circularClass}}" type="circular"></progress>
    </div>
    <div else>
      <image if="{{loading}}" class="{{imageClass}}" src="{{loadingImg}}" ></image>
    </div>
    <slot></slot>
  </div>
