{
  "extends": "../../tsconfig.root.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "./src",
    "module": "commonjs",
    "sourceMap": true,
    "paths": {
      "webpack": ["./node_modules/@types/webpack", "./node_modules/webpack"],
      "webpack-dev-server": ["./node_modules/@types/webpack-dev-server", "./node_modules/webpack-dev-server"],
    },
    "preserveConstEnums": true,
    "skipLibCheck": true,
  },
  "include": ["./src"],
  "exclude": ["./src/__tests__"],
}
