#!/usr/bin/env node

const program = require('commander')

const Project = require('../src/project')

const {
  getPkgVersion
} = require('../src/util')

program
  .option('--name', 'é¡¹ç›®åç§°')
  .option('--description', 'é¡¹ç›®ä»‹ç»')
  .option('--typescript', 'æ˜¯å¦ä½¿ç”¨ TypeScript')
  .option('--template', 'é¡¹ç›®æ¨¡æ¿')
