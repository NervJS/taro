{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "removeComments": false,
    "preserveConstEnums": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": [
    "./src"
  ],
  "compileOnSave": false
}
