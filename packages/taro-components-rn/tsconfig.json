{
  "extends": "../../tsconfig.root.json",
  "include": ["src"],
  "exclude": [
    "./src/__tests__/**/*.spec.tsx?",
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "types": ["react-native", "jest"],
    "typeRoots": ["./node_modules/@types", "./src/types", "../../node_modules/@types"]
  }
}
