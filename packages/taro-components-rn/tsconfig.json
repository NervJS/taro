
{
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "es2015"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  }
}
