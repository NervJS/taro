{
  "extends": "../../tsconfig.root.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "jsx": "react",
    "lib": ["ESNEXT"],
    "paths": {
      "react": ["./node_modules/@types/react", "./node_modules/react"],
      "vue": ["./src/types/vue/index.d.ts"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src", "./types"],
  "exclude": ["./src/__tests__/**"]
}
