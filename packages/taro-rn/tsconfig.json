{
  "include": [
    "src/**/*",
    "./types"
  ],
  "exclude": ["src/__tests__/**"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "jsx": "react",
    "moduleResolution": "node",
    "target": "ES2015",
    "lib": [
      "ES2015"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  }
}
