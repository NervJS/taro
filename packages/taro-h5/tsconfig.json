{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2015",
    "rootDir": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": false,
    "types": ["jest", "./src/types"]
  },
  "include": ["./src"],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "compileOnSave": false
}
