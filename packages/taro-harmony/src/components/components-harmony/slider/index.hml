<div>
  <slider
    id="{{id}}"
    style="color: {{color}};selected-color: {{selectedColor}};block-color: {{sliderBlockColor}}"
    min="{{min}}"
    max="{{max}}"
    step="{{step}}"
    disabled="{{disabled}}"
    value="{{value}}"
    showsteps="{{showsteps}}"
    showtips="{{showtips}}"
    onchange="onChange"
  ></slider>
  <text if="{{showValue}}" style="width: {{valueWidth}}; font-size: 14vp; color: gray">{{currentValue}}</text>
</div>

