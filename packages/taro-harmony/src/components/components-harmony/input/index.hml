<div>
  <input
    id="{{ id }}"
    value="{{ value }}"
    type="{{ realType }}"
    placeholder="{{ placeholder }}"
    style="placeholder-color: {{placeholderColor}};"
    autofocus="{{ focus }}"
    enterkeytype="{{ confirmType }}"
    maxlength="{{ maxlength }}"
    disabled="{{ disabled }}"

    @change="onInput"
    @focus="onFocus"
    @blur="onBlur"
    @enterkeyclick="onEnterKeyClick"
    >
    </input>
</div>

