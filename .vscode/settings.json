{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/yarn.lock": true,
    "**/__snapshots__": true
  },
  "jest.autoEnable": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "javascript.format.insertSpaceBeforeFunctionParenthesis": true,
  "typescript.format.insertSpaceBeforeFunctionParenthesis": true,
  "files.associations": {
    "*.json": "jsonc"
  },
  "license-header-manager.excludeExtensions": [".snap", ".md", ".d", ".sh", ".bat", ""],
  "license-header-manager.excludeFolders": [
    "node_modules/**",
    "dist",
    "bin",
    "templates",
    "target",
    ".git",
    ".github",
    ".husky",
    ".bin/",
    ".ignored",
    "node_modules"
  ]
}
