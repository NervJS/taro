<!--index.wxml-->
<view class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
  <button type="primary" style="margin:20px" bindtap="goToIndex">跳转到 index </button>
  <button type="primary" style="margin:20px" bindtap="goToFoo">跳转到 foo </button>
  <button type="primary" style="margin:20px" bindtap="goToBar">跳转到 bar </button>
</view>
